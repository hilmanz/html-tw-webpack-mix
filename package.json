{
  "name": "frontend-boilerplate-mix-twig-tailwind4",
  "private": true,
  "scripts": {
    "dev": "concurrently -n MIX,TWIG,BS -c green,cyan,magenta \"npm run mix:watch\" \"npm run twig:watch\" \"npm run bs\"",
    "build": "npm-run-all mix:prod twig:build seo:build images:webp",
    "mix:watch": "mix watch",
    "mix:prod": "mix --production",
    "twig:build": "node tools/twig/build-pages.js",
    "twig:watch": "node tools/twig/watch-pages.js",
    "seo:build": "node tools/seo/generate-seo.js",
    "images:webp": "node tools/images/convert-webp.js",
    "bs": "browser-sync start --server public --port 3000 --files \"public/**/*.html\" \"public/css/**/*.css\" \"public/js/**/*.js\" --no-notify --reload-debounce 300"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.20",
    "browser-sync": "^3.0.4",
    "browser-sync-webpack-plugin": "^2.3.0",
    "concurrently": "^9.2.1",
    "connect-history-api-fallback": "^2.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "fast-glob": "^3.3.2",
    "imagemin-webpack-plugin": "^2.4.2",
    "laravel-mix": "^6.0.49",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.8.1",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.77.8",
    "sass-loader": "^16.0.2",
    "sharp": "^0.33.5",
    "tailwindcss": "^4.0.0",
    "terser-webpack-plugin": "^5.3.10",
    "twig-html-loader": "^0.1.2",
    "twig-loader": "^0.5.5"
  },
  "dependencies": {
    "@splidejs/splide": "^4.1.4",
    "animejs": "^3.2.2",
    "gsap": "^3.12.5",
    "jquery": "^3.7.1",
    "swiper": "^11.1.14",
    "three": "^0.168.0"
  }
}
