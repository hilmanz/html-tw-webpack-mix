{% extends "@layouts/base.twig" %}
{% block title %}Blog{% endblock %}
{% block page_heading %}Blog List{% endblock %}
{% block page_subheading %}List of blog post are here{% endblock %}
{% block content %}
<section class="container mx-auto px-4 py-12">
  <div class="grid md:grid-cols-2 gap-6">
    {% for post in blog_posts %}
      <a href="/blog/{{ post.slug }}/index.html"
         class="block p-6 rounded-2xl shadow bg-white hover:opacity-90 transition">
        <h3 class="font-semibold text-lg">{{ post.title }}</h3>
        <p class="mt-2 text-gray-600 text-sm">{{ post.excerpt }}</p>
        <p class="mt-3 text-xs text-gray-400">{{ post.date }}</p>
      </a>
    {% endfor %}
  </div>
</section>
{% endblock %}
