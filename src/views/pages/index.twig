{% extends "@layouts/base.twig" %}

{% block title %}Home{% endblock %}
{% block page_heading %}Template Homepage{% endblock %}
{% block page_subheading %}Tailwind v4 + Twig + Mix + Plugins ready{% endblock %}

{% block content %}
<section class="container mx-auto px-4 py-12">
  <div class="grid md:grid-cols-2 gap-8 items-center">
    <div>
      <h2 class="text-3xl font-semibold">My Hero Section</h2>
      <p class="mt-3 text-gray-600" data-fade>
        Boilerplate ready for animation + sliders + SEO meta. Constructed by chatgpt. Edited by hilmanz.
      </p>
      <button class="btn mt-6">Explore</button>
      <div class="pulse-dot mt-6 w-3 h-3 rounded-full bg-black"></div>
    </div>

    <div class="rounded-2xl bg-white shadow p-6">
      <div class="swiper">
        <div class="swiper-wrapper">
          <div class="swiper-slide p-6 bg-gray-100 rounded-xl">Swiper Slide 1</div>
          <div class="swiper-slide p-6 bg-gray-100 rounded-xl">Swiper Slide 2</div>
          <div class="swiper-slide p-6 bg-gray-100 rounded-xl">Swiper Slide 3</div>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-14">
    <h3 class="text-xl font-semibold mb-4">Splide Demo</h3>
    <div id="splide" class="splide">
      <div class="splide__track">
        <ul class="splide__list">
          <li class="splide__slide bg-gray-100 rounded-xl p-6">Card A</li>
          <li class="splide__slide bg-gray-100 rounded-xl p-6">Card B</li>
          <li class="splide__slide bg-gray-100 rounded-xl p-6">Card C</li>
        </ul>
      </div>
    </div>
  </div>

  <div class="mt-14">
    <h3 class="text-xl font-semibold mb-4">ThreeJS Canvas</h3>
    <canvas id="three-canvas" class="border rounded-xl"></canvas>
  </div>
</section>
{% endblock %}
